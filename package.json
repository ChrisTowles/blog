{
  "name": "chris-towles-blog",
  "private": true,
  "author": "Chris Towles<Chris.Towles@gmail.com>",
  "maintainers": [
    "Chris Towles<Chris.Towles@gmail.com>"
  ],
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "deploy": "pnpm -r run deploy:nuxthub",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "prepare": "husky",
    "mcp:inspect": "pnpx @modelcontextprotocol/inspector",
    "deps:update": "pnpx taze --interactive --recursive"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250803.0",
    "@types/node": "^22.15.17",
    "dotenv": "^16.5.0",
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "nuxthub": "^0.9.3",
    "typescript": "^5.8.3",
    "wrangler": "^4.14.4"
  },
  "resolutions": {
    "unimport": "4.1.1"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "workerd"
    ],
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "better-sqlite3",
      "esbuild",
      "sharp",
      "vue-demi",
      "workerd",
      "ws"
    ]
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "lint-staged": {
    "*.png": "node --experimental-strip-types scripts/compress-images.ts",
    "*.{js,ts,vue}": "eslint --fix"
  },
  "dependencies": {
    "@nuxthub/core": "0.9.0"
  }
}

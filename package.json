{
  "name": "chris-towles-blog",
  "version": "0.1.0",
  "private": true,
  "author": "Chris Towles<Chris.Towles@gmail.com>",
  "maintainers": [
    "Chris Towles<Chris.Towles@gmail.com>"
  ],
  "type": "module",
  "scripts": {
    "build": "pnpm --filter @chris-towles/blog build",
    "build:container": "pnpm tsx scripts/build.ts test staging",
    "build:container:keep": "pnpm tsx scripts/build.ts test staging --keep",
    "dev": "pnpm docker:up && pnpm db:migrate && pnpm --filter @chris-towles/blog dev",
    "dev:no-remote": "pnpm docker:up && pnpm db:migrate && pnpm --filter @chris-towles/blog dev:no-remote",
    "deploy": "pnpm --filter @chris-towles/blog deploy:nuxthub",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset tag",
    "gcp:staging:init": "cd infra/terraform/environments/staging && terraform init",
    "gcp:staging:plan": "cd infra/terraform/environments/staging && terraform plan -lock-timeout=5m",
    "gcp:staging:apply": "cd infra/terraform/environments/staging && terraform apply -auto-approve -lock-timeout=5m",
    "gcp:staging:deploy": "pnpm tsx scripts/build.ts deploy staging",
    "gcp:staging:destroy": "cd infra/terraform/environments/staging && terraform destroy -lock-timeout=5m",
    "gcp:prod:init": "cd infra/terraform/environments/prod && terraform init",
    "gcp:prod:apply": "cd infra/terraform/environments/prod && terraform apply -auto-approve -lock-timeout=5m",
    "gcp:prod:deploy": "pnpm tsx scripts/build.ts deploy prod",
    "gcp:staging:logs": "pnpm tsx scripts/logs.ts --environment=staging",
    "gcp:staging:off": "pnpm tsx scripts/power.ts off",
    "gcp:staging:on": "pnpm tsx scripts/power.ts on",
    "gcp:prod:logs": "pnpm tsx scripts/logs.ts --environment=production",
    "db:proxy": "pnpm tsx scripts/start-db-proxy.ts",
    "db:generate": "pnpm --filter @chris-towles/blog db:generate",
    "db:migrate": "pnpm --filter @chris-towles/blog db:migrate",
    "db:studio": "pnpm --filter @chris-towles/blog db:studio",
    "docker:up": "docker compose up -d --wait",
    "docker:down": "docker compose down",
    "docker:reset": "docker compose down --volumes --remove-orphans && pnpm clean",
    "slides": "pnpm --filter @chris-towles/slides dev",
    "slides:export": "pnpm --filter @chris-towles/slides export",
    "slides:upgrade": "pnpm --filter @chris-towles/slides slides:upgrade",
    "slides:no-brainer": "pnpm --filter @chris-towles/slides dev no-brainer-upgrade.slides.md",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix-dangerously .",
    "typecheck": "pnpm --filter @chris-towles/blog typecheck",
    "test": "pnpm --filter @chris-towles/blog test",
    "test:e2e": "pnpm --filter @chris-towles/blog test:e2e",
    "test:docker": "pnpm tsx scripts/test-docker.ts",
    "eval": "pnpm --filter @chris-towles/evals eval",
    "eval:watch": "pnpm --filter @chris-towles/evals eval:watch",
    "eval:view": "pnpm --filter @chris-towles/evals eval:view",
    "prepare": "husky",
    "mcp:inspect": "pnpm dlx @modelcontextprotocol/inspector",
    "deps:update": "pnpm dlx taze --interactive --recursive",
    "clean": "rm -rf node_modules packages/*/node_modules .nuxt .output .nitro dist packages/*/.nuxt packages/*/.output pnpm-lock.yaml",
    "worktree": "pnpm tsx scripts/worktree.ts",
    "ralph": "pnpm tsx scripts/ralph-loop.ts"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "citty": "^0.1.6",
    "cli-table3": "^0.6.5",
    "dotenv": "^17.2.3",
    "find-up": "^8.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.36.0",
    "playwright-chromium": "^1.57.0",
    "strip-json-comments": "^5.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "zod": "^4.3.5",
    "zx": "^8.8.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@playwright/browser-chromium",
      "@swc/core",
      "better-sqlite3",
      "esbuild",
      "playwright-chromium",
      "protobufjs",
      "sharp",
      "unrs-resolver",
      "vue-demi"
    ]
  },
  "lint-staged": {
    "*.png": "pnpm tsx scripts/compress-images.ts",
    "*.{js,ts,vue}": "oxlint --fix"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.958.0"
  }
}

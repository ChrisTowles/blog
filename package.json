{
  "name": "chris-towles-blog",
  "version": "0.1.0",
  "private": true,
  "author": "Chris Towles<Chris.Towles@gmail.com>",
  "maintainers": [
    "Chris Towles<Chris.Towles@gmail.com>"
  ],
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --cwd packages/blog build",
    "build:container": "bun scripts/build.ts test staging",
    "build:container:keep": "bun scripts/build.ts test staging --keep",
    "dev": "bun run docker:up && bun run db:migrate && bun run --cwd packages/blog dev",
    "dev:no-remote": "bun run docker:up && bun run db:migrate && bun run --cwd packages/blog dev:no-remote",
    "deploy": "bun run --cwd packages/blog deploy:nuxthub",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset tag",
    "gcp:staging:init": "cd infra/terraform/environments/staging && terraform init",
    "gcp:staging:plan": "cd infra/terraform/environments/staging && terraform plan",
    "gcp:staging:apply": "cd infra/terraform/environments/staging && terraform apply -auto-approve",
    "gcp:staging:deploy": "bun scripts/build.ts deploy staging",
    "gcp:staging:destroy": "cd infra/terraform/environments/staging && terraform destroy",
    "gcp:prod:init": "cd infra/terraform/environments/prod && terraform init",
    "gcp:prod:apply": "cd infra/terraform/environments/prod && terraform apply -auto-approve",
    "gcp:prod:deploy": "bun scripts/build.ts deploy prod",
    "gcp:staging:logs": "bun scripts/logs.ts --environment=staging",
    "gcp:staging:off": "bun scripts/power.ts off",
    "gcp:staging:on": "bun scripts/power.ts on",
    "gcp:prod:logs": "bun scripts/logs.ts --environment=production",
    "db:generate": "bun run --cwd packages/blog db:generate",
    "db:migrate": "bun run --cwd packages/blog db:migrate",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "slides": "bun run --cwd packages/slides dev",
    "slides:export": "bun run --cwd packages/slides export",
    "slides:upgrade": "bun run --cwd packages/slides slides:upgrade",
    "slides:no-brainer": "bun run --cwd packages/slides dev no-brainer-upgrade.slides.md",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "bun run --cwd packages/blog typecheck",
    "test": "bun run --cwd packages/blog test",
    "test:e2e": "bun run --cwd packages/blog test:e2e",
    "test:docker": "bun scripts/test-docker.ts",
    "prepare": "husky",
    "mcp:inspect": "bunx @modelcontextprotocol/inspector",
    "deps:update": "bunx taze --interactive --recursive",
    "clean": "rm -rf node_modules packages/*/node_modules .nuxt .output .nitro dist packages/*/.nuxt packages/*/.output bun.lock"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/archiver": "^7.0.0",
    "@types/node": "^25.0.1",
    "@types/yauzl": "^2.10.3",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nuxthub": "^0.9.4",
    "playwright-chromium": "^1.57.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "zx": "^8.8.5"
  },
  "trustedDependencies": [
    "@parcel/watcher",
    "better-sqlite3",
    "esbuild",
    "sharp",
    "vue-demi"
  ],
  "overrides": {
    "vite": "8.0.0-beta.2",
    "@nuxt/vite-builder": "https://pkg.pr.new/@nuxt/vite-builder@33682",
    "vue": "3.5.25",
    "@vue/runtime-core": "3.5.25",
    "@vue/server-renderer": "3.5.25",
    "unimport": "4.1.1"
  },
  "lint-staged": {
    "*.png": "bun scripts/compress-images.ts",
    "*.{js,ts,vue}": "eslint --fix"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.948.0",
    "gray-matter": "^4.0.3",
    "yauzl": "^3.2.0"
  }
}

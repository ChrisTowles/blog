{
  "name": "chris-towles-blog",
  "private": true,
  "author": "Chris Towles<Chris.Towles@gmail.com>",
  "maintainers": [
    "Chris Towles<Chris.Towles@gmail.com>"
  ],
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "deploy": "pnpm -r run deploy:nuxthub",
    "aws:deploy": "tsx ./infra/deploy.mts",
    "db:generate": "pnpm -r run db:generate",
    "db:migrate": "pnpm -r run db:migrate",
    "slides": "pnpm --filter @chris-towles/slides run dev",
    "slides:export": "pnpm --filter @chris-towles/slides run export",
    "slides:no-brainer": "pnpm --filter @chris-towles/slides run dev no-brainer-upgrade.slides.md",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "prepare": "husky",
    "mcp:inspect": "pnpx @modelcontextprotocol/inspector",
    "deps:update": "pnpx taze --interactive --recursive"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@types/node": "^24.9.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "nuxthub": "^0.9.3",
    "playwright-chromium": "^1.56.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.3",
    "wrangler": "^4.45.1",
    "zx": "^8.8.5"
  },
  "resolutions": {
    "unimport": "4.1.1"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "workerd"
    ],
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "better-sqlite3",
      "esbuild",
      "sharp",
      "vue-demi",
      "workerd"
    ]
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "lint-staged": {
    "*.png": "node --experimental-strip-types scripts/compress-images.ts",
    "*.{js,ts,vue}": "eslint --fix"
  }
}

{
  "name": "chris-towles-blog",
  "version": "0.1.0",
  "private": true,
  "author": "Chris Towles<Chris.Towles@gmail.com>",
  "maintainers": [
    "Chris Towles<Chris.Towles@gmail.com>"
  ],
  "type": "module",
  "scripts": {
    "build": "pnpm --filter @chris-towles/blog run build",
    "build:container": "node --experimental-strip-types scripts/build.ts test staging",
    "build:container:keep": "node --experimental-strip-types scripts/build.ts test staging --keep",
    "dev": "pnpm --filter @chris-towles/blog run dev",
    "deploy": "pnpm --filter @chris-towles/blog run deploy:nuxthub",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset tag",
    "gcp:staging:init": "cd infra/terraform/environments/staging && terraform init",
    "gcp:staging:plan": "cd infra/terraform/environments/staging && terraform plan",
    "gcp:staging:apply": "cd infra/terraform/environments/staging && terraform apply -auto-approve",
    "gcp:staging:deploy": "node --experimental-strip-types scripts/build.ts deploy staging",
    "gcp:staging:destroy": "cd infra/terraform/environments/staging && terraform destroy",
    "gcp:prod:deploy": "node --experimental-strip-types scripts/build.ts deploy prod",
    "logs:staging": "node --experimental-strip-types infra/logs.ts --environment=staging",
    "logs:prod": "node --experimental-strip-types infra/logs.ts --environment=production",
    "db:generate": "pnpm --filter @chris-towles/blog run db:generate",
    "db:migrate": "pnpm --filter @chris-towles/blog run db:migrate",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "slides": "pnpm --filter @chris-towles/slides run dev",
    "slides:export": "pnpm --filter @chris-towles/slides run export",
    "slides:no-brainer": "pnpm --filter @chris-towles/slides run dev no-brainer-upgrade.slides.md",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "pnpm --filter @chris-towles/blog run typecheck",
    "test": "pnpm --filter @chris-towles/blog run test",
    "test:docker": "tsx scripts/test-docker.ts",
    "prepare": "husky",
    "mcp:inspect": "pnpx @modelcontextprotocol/inspector",
    "deps:update": "pnpx taze --interactive --recursive"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^24.10.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nuxthub": "^0.9.4",
    "playwright-chromium": "^1.57.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.51.0",
    "zx": "^8.8.5"
  },
  "resolutions": {
    "unimport": "4.1.1"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "workerd"
    ],
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "esbuild",
      "playwright-chromium",
      "sharp",
      "unrs-resolver",
      "vue-demi",
      "workerd"
    ]
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "lint-staged": {
    "*.png": "node --experimental-strip-types scripts/compress-images.ts",
    "*.{js,ts,vue}": "eslint --fix"
  }
}

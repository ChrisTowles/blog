{
  "name": "chris-towles-blog",
  "private": true,
  "author": "Chris Towles<Chris.Towles@gmail.com>",
  "maintainers": [
    "Chris Towles<Chris.Towles@gmail.com>"
  ],
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "deploy": "pnpm -r run deploy:nuxthub",
    "db:generate": "pnpm -r run db:generate",
    "db:migrate": "pnpm -r run db:migrate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "prepare": "husky",
    "mcp:inspect": "pnpx @modelcontextprotocol/inspector",
    "deps:update": "pnpx taze --interactive --recursive"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250819.0",
    "@types/node": "^24.3.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "nuxthub": "^0.9.3",
    "typescript": "^5.9.2",
    "wrangler": "^4.31.0"
  },
  "resolutions": {
    "unimport": "4.1.1"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "workerd"
    ],
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "better-sqlite3",
      "esbuild",
      "sharp",
      "vue-demi",
      "workerd"
    ]
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "lint-staged": {
    "*.png": "node --experimental-strip-types scripts/compress-images.ts",
    "*.{js,ts,vue}": "eslint --fix"
  }

}
